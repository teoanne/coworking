<div class="register">
  <div class="container">
    <%= render 'shared/title', title: "Log in here" %>
    <div class="well">  
        <%= form_tag "/login" do %>
        <div class="form-group">
          <%= label_tag :username %>
          <%= text_field_tag :username, params[:username] || "" %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, params[:password] || "" %>
        </div>
          <%= submit_tag "Log in", class: "btn btn-success" %>
        <% end %>
        <div>
          <%= link_to "Forgot Password?", forgot_password_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>